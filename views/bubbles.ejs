<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <title>Burst Your Bubble</title>
    <link type="text/css" href="/stylesheets/bubbles.css" rel="stylesheet" />
    <link rel="stylesheet" href="/stylesheets/jquery.mobile-1.3.1.min.css" />
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-44334208-1', 'gregbclement.com');
        ga('send', 'pageview');

    </script>

    <style>
        html {
            height: 100%;
            margin-bottom: 0px;
        }

        body {
            height: 100%;
            margin-bottom: 0px;
            background: url('/images/product_generic_bg.jpg') no-repeat top center;
        }
    </style>
</head>

<body>


    <div style="display: none" id="gameSurface">
        <img src="/images/bubbles/title.png" />
        <div id="score" class="paper" style="margin-top: 5px; margin-bottom: 5px; min-width: 150px; padding: 7px">
            <span style="font-weight: bold">Score: </span><span data-bind="text: score"></span>
        </div>

        <div style="clear: both"></div>
        <div class="paper">
            <table>
                <tbody>
                    <!-- ko foreach: rows -->
                    <tr>
                        <!-- ko foreach: columns -->
                        <td>
                            <!-- ko with: bubble -->
                            <div data-bind="click: bubbleClicked, attr: { Class: selectedClass }">
                                <img data-bind="attr: { src: imageUrl }" style="height: 33px; width: 33px" />
                            </div>
                            <!-- /ko -->
                        </td>
                        <!-- /ko -->
                    </tr>
                    <!-- /ko -->
                </tbody>
            </table>

        </div>

        <a href="#" data-bind="click: openSettingsDialog" data-role="button">Settings</a>
        <div data-role="dialog" id="settings" style="display: none">
            <div data-role="header">
                <h1>Settings</h1>
            </div>
            <div data-role="content">
                <input type="checkbox" data-bind="checked: superShift" id="superShift" />
                <label for="superShift">Super Shift</label>
            </div>
        </div>
    </div>

    <div id="gameLoading">
        <center>
            <div class="paper" style="display: inline-block; text-align: center; margin-top: 30px; font-family: lovin">
                <img src="/images/bubbles/splash.png" />
                <br />
                <img src="/images/ajax-loader.gif" style="vertical-align: middle" />
                <span style="font-family: lovin; font-size: 16pt">
                    loading...
                </span>
            </div>
        </center>
    </div>


    <audio src="/media/pop.mp3" preload="auto" style="display: none" id="popMediaPlayer"></audio>
    <script src="/javascripts/jquery-1.9.1.min.js"></script>
    <script src="/javascripts/jquery.mobile-1.3.1.min.js"></script>
    <script src="/javascripts/knockout-3.3.0.js"></script>D
    <script type="text/javascript" src="/javascripts/knockout.mapping-latest.js"></script>
    <script type="text/javascript" src="/javascripts/bubble-burster.js?v=1"></script>
</body>
</html>
